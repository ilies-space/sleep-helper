<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/gardien_background"
    android:orientation="vertical" >

    <Button
        android:background="@drawable/close"
        android:id="@+id/btn_close"
        android:layout_width="35dp"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:layout_height="35dp"/>

    <LinearLayout
        android:id="@+id/notepad"
        android:gravity="center"
        android:elevation="10dp"
        android:background="@drawable/rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/imageView0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/notepad" />

        <TextView

            android:layout_gravity="center"
            android:textSize="22dp"
            android:id="@+id/btn_notepad"
            android:layout_width="140dp"
            android:layout_height="65dp"
            android:text="Notepad"
            android:gravity="center"
            android:textColor="@color/textcolor1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/feedback"

        android:gravity="center"
        android:elevation="10dp"
        android:background="@drawable/rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/imageView1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/feedback" />

        <TextView

            android:layout_gravity="center"
            android:textSize="22dp"
            android:id="@+id/btn_feedback"
            android:layout_width="140dp"
            android:layout_height="65dp"
            android:text="Feed back"
            android:gravity="center"
            android:textColor="@color/textcolor1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rate"
        android:gravity="center"
        android:elevation="10dp"
        android:background="@drawable/rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/stars" />

        <TextView

            android:layout_gravity="center"
            android:textSize="22dp"
            android:id="@+id/btn_suport"
            android:layout_width="140dp"
            android:layout_height="65dp"
            android:text="Rate 5 stars"
            android:gravity="center"
            android:textColor="@color/textcolor1"/>

    </LinearLayout>


    <Button
        android:layout_margin="20dp"
        android:textColor="@android:color/white"
        android:background="@color/rectanglebg"
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="exit" />

</LinearLayout>